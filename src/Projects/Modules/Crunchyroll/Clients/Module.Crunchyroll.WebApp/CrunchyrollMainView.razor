@namespace Module.Crunchyroll.WebApp
@page "/main"

    <div class="d-flex flex-column h-100">
        <header class="d-flex flex-row justify-content-between bg-info w-100 align-items-center" style="max-height:6vh; height:6vh;">
            <div class="h-100">
                <img class="h-100" src="/images/crunchyroll.png" />
            </div>

            <div class="h-100">
                <Module.Crunchyroll.WebApp.Views.SearchView @ref="searchView" AnimeSearchedDelegate="(searchedAnime) => this.animeDetailView.Anime = searchedAnime" />
            </div>
        </header>
        
        <Module.Crunchyroll.WebApp.Views.AnimeDetailView @ref="animeDetailView" />
    </div>


@code 
{
    private SearchView searchView;
    private AnimeDetailView animeDetailView;
}
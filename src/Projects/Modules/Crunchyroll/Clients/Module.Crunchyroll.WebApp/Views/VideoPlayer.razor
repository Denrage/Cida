<link href="_content/Module.Crunchyroll.WebApp/css/videoPlayer.css" rel="stylesheet" />

<video id="my-video"
       class="video-js"
       controls
       preload="auto"
       width="640"
       height="264"
       data-setup="{}">
    <source src="@this.Url" type="application/x-mpegURL"/>
    <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a
        web browser that
        <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
    </p>
</video>

<script suppress-error="BL9992" src="_content/Module.Crunchyroll.WebApp/javascript/videoPlayer.js"></script>

@code {
    [Parameter]
    public string Url { get; set; }
}

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:Module.AnimeSchedule.Avalonia.Converter"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Module.AnimeSchedule.Avalonia.Views.Schedules.ScheduleDetailView">
  <Grid Grid.RowDefinitions="*,Auto,*">
    <ContentControl Grid.Row="0" Content="{Binding Edit}"/>
    <Button Grid.Row="1" Content="Save" Command="{Binding Save}"/>
    <ContentControl Grid.Row="2" Content="{Binding Assign}"/>
  </Grid>
</UserControl>
